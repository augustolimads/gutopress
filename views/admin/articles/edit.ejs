<%- include('../../partials/head.ejs') %>
<%- include('../../partials/adminTopbar.ejs') %>
<div class="card mt-4">
    <div class="card-header">
        <h2>Alteração de Artigo</h2>
    </div>
    <div class="card-body">
        <form method="POST" action="/articles/update">
            <input 
                type="hidden" 
                name="id" 
                value="<%= article.id %>"
            >
            <input 
                class="form-control" 
                type="text" 
                name="title" 
                placeholder="Defina o título do artigo" 
                value="<%= article.title %>"
            >
            <br>
            <textarea 
                id="article" 
                class="form-control" 
                type="text" 
                name="body"
            ><%- article.body %></textarea>
            <br>
            <label for="category">Escolha uma categoria:</label>
            <select name="category" id="category" class="form-control" value="<%= article.category.id %>">
                <% categories.forEach(category => { %>
                    <option value="<%= category.id %>"><%= category.title %></option>
                <% }) %>
            </select>
            <br>
            <button class="btn btn-primary">Atualizar</button>
        </form>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: '#article',
        plugins: [
            `advlist autolink link 
            image lists print preview 
            hr searchreplace wordcount 
            fullscreen insertdatetime 
            media save table paste emoticons`
        ]
    })
</script>